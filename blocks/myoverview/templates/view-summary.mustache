{{!
    @template block_myoverview/view-summary

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "showcourseimage": true,
                "fullname": "course 3",
                "summary": "This course is about assignments",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Miscellaneous",
                "visible": true
            }
        ]
    }
}}
<ul class="list-group">
{{#courses}}
    <li class="list-group-item course-summaryitem mb-1"
        data-region="course-content"
        data-course-id="{{{id}}}">
        <div class="d-flex">
            {{#courseimage}}
                {{#showcourseimage}}
                    <a href="{{viewurl}}" tabindex="-1">
                        <div class="summaryimage rounded-circle mr-2" style='background-image: url("{{{courseimage}}}");'>
                            <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
                        </div>
                    </a>
                {{/showcourseimage}}
            {{/courseimage}}
            <div class="class="align-self-stretch d-flex flex-column w-100">
                <div class="pull-right d-flex">
                    {{> block_myoverview/course-action-menu }}
                </div>
                <div class="row-fluid">
                    <div class="{{#hasprogress}}col-md-6{{/hasprogress}}{{^hasprogress}}col-md-11{{/hasprogress}} d-flex align-items-center">
                        <div>
                            <div class="text-muted muted d-flex mb-1 flex-wrap">
                                {{#showcoursecategory}}
                                    <span class="sr-only">
                                        {{#str}}aria:coursecategory, core_course{{/str}}
                                    </span>
                                    <span class="categoryname">
                                        {{{coursecategory}}}
                                    </span>
                                {{/showcoursecategory}}
                                {{#showshortname}}
                                    {{#showcoursecategory}}
                                        <div class="pl-1 pr-1">|</div>
                                    {{/showcoursecategory}}
                                    <span class="sr-only">
                                        {{#str}}aria:courseshortname, core_course{{/str}}
                                    </span>
                                    <div>{{{shortname}}}</div>
                                {{/showshortname}}
                            </div>
                            <a href="{{viewurl}}" class="coursename">
                                {{> core_course/favouriteicon }}
                                <span class="sr-only">
                                    {{#str}}aria:coursename, core_course{{/str}}
                                </span>
                                {{{fullname}}}
                           </a>
                           {{^visible}}
                               <div class="d-flex flex-wrap">
                                   <span class="tag tag-info">{{#str}} hiddenfromstudents {{/str}}</span>
                               </div>
                           {{/visible}}
                        </div>
                    </div>
                    {{#hasprogress}}
                        <div class="col-md-5 pt-3">
                            {{> block_myoverview/progress-bar}}
                        </div>
                    {{/hasprogress}}
                </div>
                <div class="row-fluid">
                    <div class="col-md-12 mt-2 summary">
                        <span class="sr-only">{{#str}}aria:coursesummary, block_myoverview{{/str}}</span>
                        {{{summary}}}
                    </div>
                </div>
            </div>
        </div>
    </li>
{{/courses}}
</ul>
